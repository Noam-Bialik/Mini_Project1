<UserControl x:Class="UIwpf.AllTesterTests"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UIwpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid Name="AllTesterTest" ItemsSource="{Binding}" IsReadOnly="True" AutoGenerateColumns="False" Margin="0,0,0,10" SelectionChanged="AllTesterTest_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Trainee Id" Binding="{Binding Trainee_id}" />
                <DataGridTextColumn Header="Time" Binding="{Binding Preferred_treinee_time}" Width="100"/>
                <DataGridTextColumn Header="start address" Binding="{Binding Start_address}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
