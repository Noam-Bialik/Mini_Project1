<UserControl x:Class="UIwpf.AllTraineeTests"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UIwpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid Name="AllTraineeTest" ItemsSource="{Binding}" IsReadOnly="True" AutoGenerateColumns="False" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Time" Binding="{Binding Preferred_treinee_time}" Width="100"/>
                <DataGridTextColumn Header="start address" Binding="{Binding Start_address}"/>
                <DataGridTextColumn Header="grade" Binding="{Binding Grade}" />
                <DataGridTextColumn Header="note" Binding="{Binding Note}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
