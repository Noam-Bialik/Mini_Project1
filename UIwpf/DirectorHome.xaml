<UserControl x:Class="UIwpf.DirectorHome"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UIwpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="6*"/>
        </Grid.ColumnDefinitions>
        <Grid  Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button Name="testers" Grid.Row="0" Content="all testers" Click="Testers_Click" MinHeight="40" />
            <Button Name="trainees" Grid.Row="1" Content="all trainees" Click="Trainees_Click" MinHeight="40"/>
            <Button Name ="tests"  Grid.Row="2" Content="all tests" Click="Tests_Click" MinHeight="40"/>
            
        </Grid>

        <Grid Grid.Column="1" Name="data">
        </Grid>
    </Grid>
</UserControl>
