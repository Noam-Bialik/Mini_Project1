<UserControl x:Class="UIwpf.TesterHome"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UIwpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="6*"/>
        </Grid.ColumnDefinitions>
        <StackPanel  Grid.Column="0">
            <Button Name="UpdateTester" Content="update personal info" MinHeight="40" Click="UpdateTester_Click"/>
            <Button Name="Remove" Content="remove tester" MinHeight="40" Click="Remove_Click"/>
            <Button Name="UpdateTest" Content="update test" MinHeight="40" Click="UpdateTest_Click"/>
            <Button Name="AllTests" Content="all my tests" MinHeight="40" Click="AllTests_Click"/>
        </StackPanel>
        <Grid Grid.Column="1" >
            <Frame Name="data"/>
        </Grid>
    </Grid>
</UserControl>
