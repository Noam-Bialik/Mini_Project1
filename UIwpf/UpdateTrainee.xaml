<UserControl x:Class="UIwpf.UpdateTrainee"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UIwpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="150*"/>
            <RowDefinition Height="15*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Update Trainee:."/>
        <local:TraineeUserControl x:Name="TraineeUC" Grid.Row="1"/>
        <Button Name="DoneUpdate" Content="update" Grid.Row="2" IsEnabled="False" Click="DoneUpdate_Click"/>
    </Grid>
</UserControl>
